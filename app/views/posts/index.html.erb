<div class="container text-center">
    <div class="row">
        <% @posts.each do |post| %>    
            <div class="col">
                <div class="card" style="width: 12rem;">
                    <div class="card-body">
                        <h6 class="card-title"> <%= post.title %></h6> 
                        <p class="card-subtitle mb-2 text-muted" style="font-size: 0.7rem;"> <%= post.author %></p> 
                        <p class="card-text" style="font-size: 0.6rem;"><%= post.content %></p>
                        <p class="card-text" style="font-size: 0.6rem;"><%= post.created_at %></p>
                        <%= link_to 'Show', post, class: "btn btn-info btn-sm" %>
                    </div>
                </div>
            </div>    
        <% end %>
    </div>
</div>